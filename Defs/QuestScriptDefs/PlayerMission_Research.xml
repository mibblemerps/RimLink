<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <QuestScriptDef>
    <defName>PlayerMission_Research</defName>
    <isRootSpecial>true</isRootSpecial>
    <autoAccept>true</autoAccept>
    <questDescriptionAndNameRules>
      <rulesStrings>
        <li>questName(pawn_count==1)->Researcher From [from]</li>
        <li>questName(pawn_count>=2)->Research Team From [from]</li>
        <li>questName->Research Program From [from]</li>
        <li>questName->Joint Research From [from]</li>
        
        <li>questDescription(pawn_count==1)->[from] has sent you a researcher for [days] days.\n\n[bondInfo]</li>
        <li>questDescription(pawn_count>=2)->[from] has lent you [pawn_count] colonists for [days] days.\n\n[bondInfo]</li>
        <li>bondInfo(bond>=1)->If they are not safely returned, you will not have your bond of [bond] silver returned.</li>
        <li>bondInfo->No bond has been paid.</li>
      </rulesStrings>
    </questDescriptionAndNameRules>

    <root Class="QuestNode_Sequence">
      <nodes>
        <li Class="QuestNode_SubScript">
          <def>PlayerMission_Base</def>
        </li>

        <!-- Disable all work except patient and research -->
        <li Class="PlayerTrade.Missions.Quest.QuestNode_WorkTypeDefDisabled">
          <pawns>$pawns</pawns>
          <invert>true</invert>
          <workTypeDefs>
            <li>Research</li>
            <li>Patient</li>
            <li>PatientBedRest</li>
          </workTypeDefs>
        </li>

        <!-- Research speed multiplier-->
        <li Class="PlayerTrade.Missions.Quest.QuestNode_ResearchSpeedModifier">
          <pawns>$pawns</pawns>
          <multiplier>1.25</multiplier>
        </li>
      </nodes>
    </root>
  </QuestScriptDef>
  
</Defs>